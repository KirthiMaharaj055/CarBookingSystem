@model BookingListViewModel

@if (TempData["BookingDeleted"] != null) {
    <p class="text-success">@TempData["BookingDeleted"]</p>
}

@if (Model != null && Model.Bookings.Any())
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>Booked Car</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
        @foreach (var booking in Model.Bookings)
        {
            <tr>
                <td>@booking.CarModel</td>
                <td>@booking.StartDate</td>
                <td>@booking.EndDate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@booking.Id.ToString()">Edit</a>
                    <a asp-action="Delete" asp-route-id="@booking.Id.ToString()">Delete</a>
                </td>
            </tr>
        }
    </table>
    
    <div>
    <a asp-controller="Car" asp-action="Index">Back to list</a>
    </div>
}
else
{
    <p>No bookings found.</p>
}
